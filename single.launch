<launch>

    <arg name="markerId"        default="26"/>
    <arg name="markerSize"      default="0.0227"/>    <!-- in m -->
    <arg name="marker_frame"    default="aruco_marker_frame"/>
    <arg name="ref_frame"       default="kinect_visionSensor"/>  <!-- leave empty and the pose will be published wrt param parent_name -->
    <arg name="corner_refinement" default="LINES" /> <!-- NONE, HARRIS, LINES, SUBPIX -->


    <node pkg="aruco_ros" type="single" name="aruco_single">
        <remap from="/camera_info" to="/kinect/rgbimage/camera_info" />
        <remap from="/image" to="/kinect/rgbimage/image_rect_color" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="marker_id"          value="$(arg markerId)"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="kinect_visionSensor"/>
        <param name="marker_frame"       value="$(arg marker_frame)" />
        <param name="corner_refinement"  value="$(arg corner_refinement)" />
    </node>

    <node pkg="tf" type="static_transform_publisher" name="aruco_sensor" args="0 0 0 0 0 1.57 aruco_marker_frame aruco 100" />

    <node pkg="teleop_kuka" type="tf_listener_aruco.py" name="tf_listener_aruco" />

    <node name="image_proc" pkg="image_proc" type="image_proc" ns="kinect/rgbimage"/>

</launch>

